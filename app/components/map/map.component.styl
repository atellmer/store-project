@import 'nib'

.likearts-content .shield
	position absolute
	top 15%
	left 50%
	transform translate(-50%, -50%)
	padding 20px 30px
	background-color $secondary-color
	z-index 10
	border-radius 3px
	@extend .paper-shadow-z1
	@media (max-width: 400px)
		display none

	&:after
		content ''
		position absolute
		bottom -15px
		left 50%
		transform translate(-50%, 0) rotate(45deg)
		width 30px
		height 30px
		background-color $secondary-color

	&__title
		display inline-block
		text-align center
		color #fff
		line-height 1.2
		margin 0
		font-weight 300
				
		&--h2
			font-size 3.2rem
			font-weight 300
			@media (max-width: $phone)
				font-size 2.2rem
			@media (max-width: 400px)
				font-size 1.8rem