@import 'nib'

$distance = 30

.likearts-content .bee-container
	position absolute
	top 0
	left 0
	width 100%
	perspective 1000px
	@media (max-width: 1024px)
		display none

.likearts-content .bee
	position absolute
	width 40px
	height 40px
	@extend .cover
	transform-style preserve-3d
	background-image: url(../app/components/bee/img/bee.png)
	&--john
		top ($distance * 1)px
		left ($distance * 5)px
		animation motion--john 20s infinite ease-in-out


@keyframes motion--john {
	0% {
		transform translate(10px, 30px) 
	}
	20% {
		transform translate(15px, 25px)
	}
	50% {
		transform translate(1000px, 50px)
	}
	51%{
		transform translate(990px, 50px) rotateY(180deg)
	}
	60% {
		transform translate(800px, 100px) rotateY(180deg)
	}
	80% {
		transform translate(80px, 30px) rotateY(180deg)
	}
	100% {
		transform translate(10px, 30px)
	}
}
