@import 'nib'

.likearts-content .phone
	text-align right
	@media screen and (max-width: $phone)
		text-align center
		width 100%
	&__text
		font-size 2.5rem
		font-weight 300
		@media screen and (max-width: 992px)
			font-size 2rem
		@media screen and (max-width: $phone)
			font-size 1.5rem
	&__number
		font-size 3.1rem
		font-weight 900
		color $secondary-color
		@media screen and (max-width: 992px)
			font-size 2.5rem
		@media screen and (max-width: $phone)
			font-size 2rem