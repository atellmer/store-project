@import 'nib'

.likearts-content .contacts
	position absolute
	bottom -70px
	left 30%
	transform translate(-50%, -50%)
	padding 20px
	background-color #fff
	z-index 10
	border-radius 3px
	@extend .flex, .paper-shadow-z2
	flex-flow column wrap
	@media screen and (max-width: $phone)
		bottom -110px
		left 50%
		padding 10px
		width 100%
		box-shadow none!important

	&__title
		margin 10px 0
		font-weight 700

	&__item
		margin 5px 0

	&__btn
		width 100%
		padding 8px 16px
		color #fff
		margin 8px 0
		text-align center
		text-transform uppercase
		user-select none
		cursor pointer
		border-radius 3px
		@extend .paper-shadow-z1
		@media screen and (max-width: $phone)
			font-size 1.2rem

		&--red
			background-color #c92a2a
		&--green
			background-color #23b03d