@import 'nib'

.likearts-content .cart
	position fixed
	top 0
	right 0
	width 400px
	transform translate(400px, 0)
	height 100vh
	background-color rgba(239, 108, 0, 0.95);
	z-index 100
	color #fff
	transition transform .2s ease-in-out
	padding 20px
	@media screen and (max-width: 1200px)
		width 300px
		transform translate(300px, 0)
	@media screen and (max-width: $phone)
		width 200px
		transform translate(200px, 0)

	&__close-btn
		position absolute
		top 0
		right 0
		padding 16px
		cursor pointer
		line-height 1
		@media screen and (max-width: $phone)
			padding 8px
	
	&__icon
		font-size 4rem
		@media screen and (max-width: $phone)
			font-size 3rem

	&__title
		text-transform uppercase
		font-size 1.5rem

	&__list
		list-style none
		margin 60px 0 30px 0
		padding 0
		width 100%
		height 200px

	&__item
		position relative
		margin 10px 0
		font-size 1.8rem
		font-weight 300
		border-bottom 1px solid #fff
		user-select none
		@extend .flex
		justify-content space-between
		@media screen and (max-width: $phone)
			font-size 1.4rem

	&__order-btn
		display inline-block
		padding 8px 16px
		background-color #03A9F4
		color #fff
		text-align center
		text-transform uppercase
		font-weight 300
		border-radius 3px
		cursor pointer
		user-select none
		@extend .paper-shadow-z1, .transition
		&:hover
			@extend .paper-shadow-z2
		@media screen and (max-width: $phone)
			font-size 1.2rem

	&__delete-btn
		cursor pointer

	&__brand
		text-align center
		text-transform uppercase
		color #E65100
		font-size 3rem
		font-weight 300
		margin 30px 0 0 0

	&__sum
		font-size 1.6rem
		font-weight 300

	.btn-container
		@extend .flex


.likearts-content .js-cart--active
	transform translate(0)
	@extend .paper-shadow-z3

.likearts-content .cart-btn
	position fixed
	top 20px
	right 20px
	width 64px
	height 64px
	background-color $secondary-color
	border-radius 3px
	z-index 99
	cursor pointer
	opacity 0.8
	@extend .paper-shadow-z1, .transition
	@media screen and (max-width: $phone)
		top 5px
		right 5px
	&:hover
		opacity 1
		@extend .paper-shadow-z2

	&__icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color #fff

	&__count
		position absolute
		top 2px
		right 6px
		color #fff


.mCSB_container_wrapper>.mCSB_container
	padding-right 0

