@import 'nib'

.likearts-content .product-card
	height auto
	background-color #fff
	margin 10px
	border-radius 2px
	@extend .paper-shadow-z1
		
	&__pic
		margin 0 auto
		
	&__info
		padding 10px
		
	&__info-title
		font-size 2.4rem
		font-weight 700
		text-align center
		color #47525b
		margin 0
		@media screen and (max-width: $phone)
			font-size 1.5rem
			
	&__button
		width 100%
		padding 20px 30px
		background linear-gradient(270deg, #EF5350, #9575CD)
		background-size 400% 400%
		animation background-button 10s ease infinite
		text-align center
		color #fff
		text-transform uppercase
		cursor pointer
		font-size 1.3rem
		margin 10px 0 0 0
		border-radius 2px
		@extend .transition
		&:hover
			background-color #2ecc71
		@media screen and (max-width: $phone)
			font-size 1rem
			padding 15px 25px

	&__volume
		@extend .flex

	&__volume-item
		@extend .flex
		flex-flow column wrap
		text-align center
		margin 10px

	&__radio-btn
		position relative
		width 20px
		height 20px
		border-radius 50%
		border 1px solid #ccc
		box-shadow inset 1px 1px 1px #BDBDBD
		cursor pointer
		margin 5px

	&__amount
		@extend .flex
		margin 10px 0 0 0

	&__amount-count
		width 64px
		@extend .flex
	
	&__amount-btn
		padding 24px
		position relative
		cursor pointer	
		border-radius 3px
		@extend .transition
		&--decrement
			background-color #FFCDD2
			color #F44336
			&:hover
				background-color #E57373
				color #D32F2F
		&--increment
			background-color #DCEDC8
			color #8BC34A
			&:hover
				background-color #AED581
				color #689F38

	&__amount-icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)

	&__price
		@extend .flex
		padding 10px 20px
		font-size 2rem
		margin 10px 0 0 0
		font-weight 700

.likearts-content  .js-product-card__radio-btn--active
	border 1px solid #fcaf18
	box-shadow none
	&::after
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		content ''
		width 10px
		height 10px
		border-radius 50%
		background-color #fcaf18

@keyframes background-button { 
    0%{
		background-position 0% 50%
	}
    50%{
		background-position 100% 50%
	}
    100%{ 
		background-position 0% 50%
	}
}

