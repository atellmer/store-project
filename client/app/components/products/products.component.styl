@import 'nib'

.likearts-content .products__carousel-item
	@extend .flex
	flex-flow row wrap

.likearts-content .product-card
	width calc(50% - 20px)
	height auto
	max-width 282px
	background-color #fff
	margin 10px
	border-radius 2px
	@extend .paper-shadow-z2
	@media screen and (max-width: 480px)
		width calc(100% - 20px)
		
	&__pic
		margin 0 auto
		
	&__info
		padding 10px
		
	&__info-title
		font-size 2.4rem
		font-weight 700
		text-align center
		color #47525b
		margin 0
		@media screen and (max-width: $phone)
			font-size 1.5rem
			
	&__button
		width 100%
		padding 20px 30px
		background-color #23b03d
		text-align center
		color #fff
		text-transform uppercase
		cursor pointer
		font-size 1.3rem
		margin 10px 0 0 0
		border-radius 2px
		@extend .transition
		&:hover
			background-color #2ecc71
		@media screen and (max-width: $phone)
			font-size 1rem
			padding 15px 25px
