@import 'nib'

.likearts-content .section--1
	min-height 670px
	background-image url('../../../resources/img/bg/bg--1.png')
	@media screen and (max-width: $phone)
		min-height 0
		
.likearts-content .section--1 .content
	&__title
		text-align center
		color #7f4412
		margin 0
		line-height 1.2
		
		&--h1
			font-size 4rem
			font-weight 700
			@media screen and (max-width: $phone)
				font-size 3rem
			@media screen and (max-width: 400px)
				font-size 2rem
				
		&--h2
			font-size 3.2rem
			font-weight 300
			@media screen and (max-width: $phone)
				font-size 2.2rem
			@media screen and (max-width: 400px)
				font-size 1.8rem
				
	&__flex
		@extend .flex
		@media screen and (max-width: 992px)
			flex-flow column-reverse wrap
	&__pic
		&--small
			width 80%
			
	&__label
		width calc(100% - 6px)
		background-color #fc141d
		color #fff
		padding 3px 10px
		margin 10px
		text-align center
		font-size 1.8rem
		@media screen and (max-width: 992px)
			font-size 1.3rem
			width auto
			
			
.likearts-content .section--1 .column
	@media screen and (max-width: 992px)
		margin 20px 0
	&--left
		@media screen and (max-width: 992px)
			display none
					
	&--right
		@extend .flex
		flex-flow column wrap
		
		
.likearts-content .section--1 .waves
	position absolute
	bottom 0px
	z-index 2
	width 100%
	height 13px
	@extend .cover
	background-image url(../resources/img/bg/waves.png)
