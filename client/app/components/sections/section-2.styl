@import 'nib'

.likearts-content .section--2
	min-height 670px
	background-color #fff
	margin 60px 0
	@media (max-width: $phone)
		min-height 0
		margin 20px 0

.likearts-content .section--2 .products
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items stretch
	width 100%
	margin 0 auto
	@extend .transition
	@media (max-width 1280px)
		justify-content center

.likearts-content .section--2 .js-products--active
	transform translate(-100px, 0);
	@media screen and (max-width: 992px)
		transform translate(0, 0);